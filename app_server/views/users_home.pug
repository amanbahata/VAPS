doctype html
html
    head
        link(href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/superhero/bootstrap.min.css", rel="stylesheet", integrity="sha384-Xqcy5ttufkC3rBa8EdiAyA1VgOGrmel2Y+wxm4K3kI3fcjTWlDWrlnxyD6hOi3PF", crossorigin="anonymous")
        link(href='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js', rel= 'jquery')
        link(href='/stylesheets/style1.css', rel='stylesheet')
        title= title
    body
        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') VAPS
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li.active
                            a(href='#')
                                | LIST APPLICATIONS
                                span.sr-only (current)

                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='#') LOG OUT
        .container
        block content
            .panel.panel-primary
                .panel-heading
                    h3.panel-title LIST OF APPLICATIONS AWAITING ASSESSMENT
            .panel-body
                table.table.table-striped.table-hover
                    thead
                        tr
                            th #
                            th REFERENCE NUMBER
                            th FULL NAME
                            th DATE OF BIRTH
                            th DOCUMENT NUMBER
                    tbody
                        - for (var i = 1; i < applications.length; ++i)
                           -var dob = (applications[i].date_of_birth).substring(0,10)
                            tr
                                td=i
                                td
                                    a(href="/users/applications/" + applications[i].reference_number) #{applications[i].reference_number}
                                td #{applications[i].full_name}
                                td #{dob}
                                td #{applications[i].document_number}



