
extends layout1

block content
    .panel.panel-primary
        .panel-heading
            h3.panel-title
            ul.nav.nav-pills
                li.active
                    a(href='#')
                        | NUMBER OF VISA APPLICATIONS AWAITING ASSESSMENT
                        span.badge #{applications.length}
        .panel-body
            table.table.table-striped.table-hover
                thead
                    tr
                        th #
                        th REFERENCE NUMBER
                        th FULL NAME
                        th DATE OF BIRTH
                        th DOCUMENT NUMBER
                tbody
                    - for (var i = 1; i < applications.length; ++i)
                       -var dob = (applications[i].date_of_birth).substring(0,10)
                        tr
                            td=i
                            td
                                a(href="/users/applications/" + applications[i].reference_number) #{applications[i].reference_number}
                            td #{applications[i].full_name}
                            td #{dob}
                            td #{applications[i].document_number}



